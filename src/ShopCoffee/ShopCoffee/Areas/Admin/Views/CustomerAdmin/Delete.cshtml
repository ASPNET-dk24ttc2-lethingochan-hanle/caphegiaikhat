@model ShopCoffee.Database.Customer

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa tài khoản</h1>


<div>
    <h4>Tài khoản</h4>
    <hr />
    <dl class="row">
        <div class=" mb-4">
            <img src="@(!string.IsNullOrEmpty(Model.Img) ? Model.Img : "/images/default-avatar.png")"
                 alt="Ảnh đại diện"
                 class="rounded-circle shadow-sm border"
                 style="width: 150px; height: 150px; object-fit: cover; border: 1px solid grey" />
            <h4 class="mt-3 fw-semibold text-dark">
                @Model.FirstName @Model.LastName
            </h4>
            <p class="text-muted mb-0">
                @if (Model.Role == 1)
                {
                    <span class="badge bg-success">Quản trị viên</span>
                }
                else
                {
                    <span class="badge bg-secondary">Người dùng</span>
                }
            </p>
        </div>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegisteredAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegisteredAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdateAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdateAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>

        <dt class="col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10 mt-3">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
</div>
<div class="d-flex gap-2">
    <form asp-action="Delete">
        <input type="hidden" asp-for="CustomerId" />
        <button type="submit" value="Delete" class="btn btn-danger">
            <i class="fa fa-trash"></i> Xóa
        </button>
    </form>
    <a asp-action="Index" class="btn btn-secondary ml-2">
        <i class="fa fa-arrow-left"></i> Trở lại
    </a>
</div>

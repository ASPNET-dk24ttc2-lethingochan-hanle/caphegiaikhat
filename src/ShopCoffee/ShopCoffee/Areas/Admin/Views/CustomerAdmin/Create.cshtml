@model ShopCoffee.Database.Customer

@{
    ViewData["Title"] = "Create";
}

<h4>Thêm mới tài khoản</h4>

<hr />
<div class="row ml-4">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label fw-semibold"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label fw-semibold"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label fw-semibold "></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label fw-semibold"></label>
                <input asp-for="Phone" type="tel" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label fw-semibold"></label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="Img" class="control-label"></label>
                <input asp-for="Img" class="form-control" />
                <span asp-validation-for="Img" class="text-danger"></span>
            </div> *@
            <div class="">
                <label asp-for="Img" class="form-label fw-semibold">Ảnh đại diện</label>
                <input asp-for="Img" type="file" accept="image/*" class="form-control" id="imgInput" />
                <span asp-validation-for="Img" class="text-danger"></span>
                <div class="mt-2 text-center">
                    <img id="imgPreview" src="#" alt="Preview ảnh" class="img-thumbnail mt-2" style="max-height: 150px; display: none;" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label fw-semibold"></label>
                <input asp-for="DateOfBirth" type="date" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu..." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-flex align-items-center">
                <div class="form-check mt-4">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input" checked />
                    <label asp-for="IsActive" class="form-check-label fw-semibold">
                        Kích hoạt tài khoản
                    </label>
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

            <div class="d-flex pt-3 pb-5 align-items-center">
                <label asp-for="Role" class="form-label fw-semibold mr-2" style="white-space:nowrap"></label>
                <select asp-for="Role" class="form-select">
                    <option value="1">Người dùng</option>
                    <option value="0">Quản trị viên</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success mr-2">
                    <i class="fa fa-save"></i> Thêm
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Trở lại
                </a>
            </div>
        </form>
    </div>
</div>

@* <div>
    <a asp-action="Index">Back to List</a>
</div> *@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Preview ảnh sau khi chọn
        document.getElementById('imgInput').addEventListener('change', function (event) {
            const [file] = event.target.files;
            const preview = document.getElementById('imgPreview');
            if (file) {
                preview.src = URL.createObjectURL(file);
                preview.style.display = 'block';
            } else {
                preview.src = '#';
                preview.style.display = 'none';
            }
        });
    </script>
}

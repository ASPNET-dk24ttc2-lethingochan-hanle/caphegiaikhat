@model ShopCoffee.Database.Product

@{
    ViewData["Title"] = "Details";
}

<h4 class="mb-4">Xóa đồ uống</h4>
<br />

<div class="card mb-4" style="max-width: 800px;">
    <div class="row g-0">
        <!-- Ảnh sản phẩm -->
        <div class="col-md-4" style="
             height:300px;
             background-image: url('@(string.IsNullOrEmpty(Model?.Img) ? Url.Content("~/images/placeholder.png") : Model.Img)');
             background-size: contain;
             background-repeat: no-repeat;
             background-position: center;
             border:1px solid #ccc;">
        </div>

        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model?.Title</h5>
                <p class="card-text">@Model?.Content</p>

                <dl class="row mb-0">
                    <dt class="col-sm-4">Giá</dt>
                    <dd class="col-sm-8">@Model?.Price.ToString("N0") đ</dd>

                    <dt class="col-sm-4">Ngày tạo</dt>
                    <dd class="col-sm-8">@Model?.CreateAt?.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Chỉnh sửa lần cuối</dt>
                    <dd class="col-sm-8">@Model?.UpdateAt?.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Danh mục</dt>
                    <dd class="col-sm-8">@Model?.Category?.Title</dd>
                </dl>

                <div class="mt-3 d-flex">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ProductId" />
                        <button type="submit" value="Delete" class="btn btn-danger"><i class="fas fa-trash"></i> Xóa</button>
                    </form>

                    <a asp-action="Index" class="btn btn-secondary ml-2">
                        <i class="fas fa-arrow-left"></i> Trở lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>



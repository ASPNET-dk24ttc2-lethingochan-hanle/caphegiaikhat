@model IEnumerable<ShopCoffee.Database.Category>

@{
    ViewData["Title"] = "Index";
}

<h3>Danh mục</h3>

<p>
    <a asp-action="Create" class="btn btn-success">Thêm mới</a>
</p>
<table class="table table-striped table-hover align-middle border">
    <thead class="table-primary">
        <tr>
            <th>
                Tên danh mục
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Ngày tạo
            </th>
            <th>
                Ngày sửa
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @item.CreateAt.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @item.UpdateAt?.ToString("dd/MM/yyyy")
                </td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning" title="Sửa">
                            <i class="fa fa-edit"></i>
                        </a>

                        <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-primary" title="Xem chi tiết">
                            <i class="fa fa-eye"></i>
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger" title="Xóa">
                            <i class="fa fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

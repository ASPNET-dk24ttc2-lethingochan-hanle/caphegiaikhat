@model ShopCoffee.Database.Category

@{
    ViewData["Title"] = "Category Details";
}

<h1 class="mb-4">Thông tin danh mục</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title mb-3">@Model.Title</h5>
        <dl class="row mb-0">
            <dt class="col-sm-3">Tên danh mục</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Mô tả</dt>
            <dd class="col-sm-9">@Model.Content</dd>

            <dt class="col-sm-3">Ngày tạo</dt>
            <dd class="col-sm-9">@Model.CreateAt.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Ngày chỉnh sửa</dt>
            <dd class="col-sm-9">@Model.UpdateAt?.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-2">
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <button type="submit" value="Delete" class="btn btn-danger" >
            <i class="fa fa-trash"></i> Xóa
        </button>
    </form>
    @* <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning">
        <i class="fa fa-trash"></i> Xóa
    </a> *@
    <a asp-action="Index" class="btn btn-secondary ml-2">
        <i class="fa fa-arrow-left"></i> Trở lại
    </a>
</div>


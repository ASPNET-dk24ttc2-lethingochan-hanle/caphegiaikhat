@model IEnumerable<ShopCoffee.Models.CartItem>
@{
    ViewData["Title"] = "Index";
}

<!-- Cart Page Start -->
<div style="height:50px"></div>
<div class="container-fluid py-5 mt-5">
    <div class="container py-5">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Ảnh</th>
                        <th scope="col">Đồ uống</th>
                        <th scope="col">Giá</th>
                        <th scope="col">Số lượng</th>
                        <th scope="col">Tổng tiền</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="idProduct-@item.IdProduct">
                            <th scope="row">
                                <div class="d-flex align-items-center">
                                    <img src="@item.Img"
                                         class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;"
                                         alt="@item.Img">
                                </div>
                            </th>
                            <td>
                                <p class="mb-0 mt-4">@item.Name</p>
                            </td>
                            <td>
                                <p class="mb-0 mt-4">
                                    @item.Price.ToString("#,##0 VND")
                                </p>
                            </td>
                            <td>
                                <div class="input-group quantity mt-4" style="width: 120px;">
                                    <a asp-controller="cart" asp-action="ChangeQuantityCart"
                                       asp-route-id="@item.IdProduct" asp-route-isIncrement="false"
                                       class="btn btn-sm btn-minus rounded-circle bg-light border mr-3">
                                        <i class="fa fa-minus"></i>
                                    </a>
                                    &nbsp;
                                    &nbsp;&nbsp;
                                    <input type="number"
                                           class="form-control form-control-sm text-center border-0"
                                           value="@item.Quantity">
                                    <a asp-controller="cart" asp-action="ChangeQuantityCart"
                                       asp-route-id="@item.IdProduct" asp-route-isIncrement="true"
                                       class="btn btn-sm btn-plus rounded-circle bg-light border">
                                        <i class="fa fa-plus"></i>
                                    </a>
                                </div>
                            </td>
                            <td>
                                <p class="mb-0 mt-4">
                                    @item.Total.ToString("#,##0VND")
                                </p>
                            </td>
                            <td>
                                <a asp-controller="cart" asp-action="RemoveCart"
                                   asp-route-id="@item.IdProduct" class="btn btn-md rounded-circle bg-light border mt-4">
                                    <i class="fa fa-times text-danger"></i>
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="row g-4 justify-content-end">
            <div class="col-8"></div>
            <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                <div class="bg-light rounded">
                    <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                        <h5 class="mb-0 ps-4 me-4">Tổng tiền</h5>
                        <p class="mb-0 pe-4">
                            @Model.Sum(p =>
                            p.Total).ToString("#,##0 VND")
                        </p>
                    </div>
                    <button class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4" type="button">
                        Thanh toán
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart Page End -->

                                <option value="saab">Popularity</option>
                                <option value="opel">Organic</option>
                                <option value="audi">Fantastic</option>
                            </select> *@
                            <form id="fruitform" method="get" asp-action="Index">
                                <label for="fruitlist">Sắp xếp:</label>
                                <select id="fruitlist" name="sortOrder" class="border-0 form-select-sm bg-light me-3"
                                        onchange="this.form.submit()">
                                    <option value="">Tên món A-Z</option>
                                    <option value="name_desc">Tên món Z-A</option>
                                    <option value="Price_desc">Giảm dần theo Giá</option>
                                    <option value="Price">Tăng dần theo Giá</option>
                                </select>

                                <!-- Giữ các filter khác -->
                                <input type="hidden" name="searchString" value="@ViewData["CurrentFilter"]" />
                                <input type="hidden" name="categoryId" value="@ViewData["CurrentCategory"]" />
                            </form>

                        </div>
                    </div>
                </div>
                <div class="row g-4">

                    <!-- Right Panel Start-->
                    <div class="col-lg-12">
                        <div class="row g-4 justify-content-center">
                            @foreach (var item in Model)
                            {
                                <!-- Item 1 Start -->
                                <div class="col-md-6 col-lg-6 col-xl-4">
                                    <div class="rounded position-relative fruite-item">
                                        <div class="fruite-img">
                                            <a asp-area="" asp-controller="Product" asp-action="Detail" asp-route-id="@item.ProductId">
                                                <img src="@item.Img"
                                                     class="img-fluid w-100 rounded-top"
                                                     alt=""
                                                     style="width:100px; aspect-ratio:1.5; object-fit:cover; border-radius:6px; overflow:hidden; margin: 2px" />
                                            </a>
                                        </div>
                                        <div class="text-white bg-secondary px-3 py-1 rounded position-absolute"
                                             style="top: 10px; left: 10px">
                                            @item.Category.Title
                                        </div>
                                        <div class="fruit-title p-4 border border-secondary border-top-0 rounded-bottom">
                                            <a asp-area="" asp-controller="Product" asp-action="Detail" asp-route-id="@item.ProductId">
                                            <h5>@item.Title</h5>
                                            </a>
                                            <div class="d-flex justify-content-between flex-lg-wrap">
                                                <p class="text-dark fs-5 fw-bold mb-0">@item.Price.ToString("N0") đ</p>

                                            </div>
                                            <div class="d-flex justify-content-end">
